<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NextActivity">

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:onClick="onClickNextButton"
        android:text="@string/next_button_text"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/redoButton"
        app:layout_constraintEnd_toEndOf="@+id/redoButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/redoButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/redoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EC407A"
        android:text="@string/redo_button_text"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/endSessionButton"
        app:layout_constraintEnd_toEndOf="@+id/endSessionButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/endSessionButton"
        app:layout_constraintTop_toBottomOf="@+id/nextButton" />

    <Button
        android:id="@+id/endSessionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#7E57C2"
        android:text="@string/end_session_button_text"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redoButton" />
</androidx.constraintlayout.widget.ConstraintLayout>